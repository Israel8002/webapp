# 🔥 Configuración de Firebase
# Copia este archivo como .env y reemplaza los valores con tu configuración de Firebase

# API Key de Firebase
FIREBASE_API_KEY=tu_api_key_aqui

# Dominio de autenticación de Firebase
FIREBASE_AUTH_DOMAIN=tu_proyecto.firebaseapp.com

# ID del proyecto de Firebase
FIREBASE_PROJECT_ID=tu_proyecto_id_aqui

# Bucket de almacenamiento de Firebase
FIREBASE_STORAGE_BUCKET=tu_proyecto.appspot.com

# Sender ID para notificaciones
FIREBASE_MESSAGING_SENDER_ID=tu_sender_id_aqui

# App ID de Firebase
FIREBASE_APP_ID=tu_app_id_aqui

# URL de la base de datos (opcional)
FIREBASE_DATABASE_URL=https://tu_proyecto.firebaseio.com

# Configuración adicional
NODE_ENV=development
DEBUG=true
